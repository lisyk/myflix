%article.video_category
  - @categories.each do |category|
    .videos.row
      %h3
      %br
        = link_to category.name
        %hr
      - category.recent_videos.each do |video|
        - if category.id == video.category_id
          .video.col-sm-2
            = link_to video_path(video) do
              =image_tag("/tmp/#{video.small_url}")
